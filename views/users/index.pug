extends /layout/application

block title
  h3= t('users.index.title')

  each user in users
    .card.mt-2
      .card-body.d-flex.justify-content-between
        div
          div
            strong.mr-1= t('entity.User.attributes.firstName')
              =':'
            = user.firstName || '-'

          div
            strong.mr-1= t('entity.User.attributes.lastName')
              =':'
            = user.lastName || '-'

          div
            strong.mr-1= t('entity.User.attributes.email')
              =':'
            = user.email

        if currentUser.id === user.id
          div.d-flex
            div
              a.btn.btn-success.btn-sm.mr-1(href=urlFor('editUser', { id: user.id }))= t('users.index.edit')
              a(
                class="btn btn-danger btn-sm"
                href=urlFor('deleteUser', { id: user.id }),
                data-confirm= t('common.areYouSure'),
                data-method="delete",
                rel="nofollow"
               )= t('users.index.delete')
