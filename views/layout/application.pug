include /mixins/forms.pug

doctype html
html(lang="en")
  head
    title= Title
    script(src='/assets/main.js')
  body
    nav.navbar.navbar-expand-lg.navbar-light.bg-light.mb-3
      a.navbar-brand(href="/")=t('menu.brand')
      button.navbar-toggler(data-toggle="collapse" data-target="#navbarSupportedContent")
        span.navbar-toggler-icon
      .collapse.navbar-collapse
        ul.navbar-nav.mr-auto
          li.nav-item.active
            a.nav-link(href=urlFor('users'))=t('menu.users')
        ul.navbar-nav
          if isSignedIn()
            li.nav-item
              +buttonTo(urlFor('session'), 'delete')(class="btn nav-link" value="Sign Out")
          else
            li.nav-item
              a.nav-link(href=urlFor('signIn'))=t('sessions.new.title')
            li.nav-item
              a.nav-link(href=urlFor('newUser'))=t('users.new.title')
    .container
      - const msg = flash.get()
      if msg
        .alert.alert-info.m-3= msg
          button.close('data-dismiss'="alert")
            span &times;

      block title

      block content
